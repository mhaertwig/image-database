server {
  listen 80;
  server_name 46.4.121.53 
  charset utf-8;


  location /media {
    root {{ root_dir }};
  }

  location /frontend {
    alias {{ application_dir }}/frontend/build;
    try_files $uri /index.html;
  }

  location /static {
    root {{ root_dir }};
  }

  location /climage {
    rewrite /climage(.*) $1;

    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://localhost:8000;
  }
}
