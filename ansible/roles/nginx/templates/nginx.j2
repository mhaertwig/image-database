server {
  listen 80;
  server_name backend.climage.mariohaertwig.de
  charset utf-8;


  location /media {
    root {{ root_dir }};
  }

  location /frontend {
    alias {{ application_dir }}/frontend/build;
    try_files $uri /index.html;
  }

  location /static {
    root {{ root_dir }};
  }

  location / {
    proxy_set_header Host $http_host;
    proxy_pass http://localhost:8000;
  }
}
